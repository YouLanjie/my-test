{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: gcc - 生成活动文件",
                        "command": "/usr/bin/gcc",
                        "args": [
                                "-g",
                                "${workspaceFolder}/include/lib/src/char_ext.c",
                                "${workspaceFolder}/include/lib/src/menu.c",
                                "${workspaceFolder}/include/lib/src/old_menu.c",
                                "${workspaceFolder}/include/lib/src/tools.c",
                                "${workspaceFolder}/include/lib/src/cmd/cmd.c",
                                "${workspaceFolder}/command.c",
                                "${workspaceFolder}/sub/CPU.c",
                                "${workspaceFolder}/sub/fork.c",
                                "${workspaceFolder}/sub/input_to_hex.c",
                                "-Wall",
                                "-lncurses",
                                "-o",
                                "${fileDirname}/bin/${fileBasenameNoExtension}"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "调试器生成的任务。"
                }
        ],
        "version": "2.0.0"
}